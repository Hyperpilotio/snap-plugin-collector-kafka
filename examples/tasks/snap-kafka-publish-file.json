{
    "version": 1,
    "schedule": {
        "type": "simple",
        "interval": "1s"
    },
    "workflow": {
        "collect": {
            "metrics": {
                "/hyperpilot/kafka/node/*/kafka_network/type/RequestMetrics/name/*/request/Produce/*": {},
                "/hyperpilot/kafka/node/*/kafka_server/type/BrokerTopicMetrics/name/*": {}
            },
            "config": {
                "/hyperpilot/kafka": {
                    "mx4j_url": "localhost",
                    "mx4j_port": 8082
                }
            },
            "publish": [{
                "plugin_name": "file",
                "config": {
                    "file": "/dev/null"
                }
            }]
        }
    }
}